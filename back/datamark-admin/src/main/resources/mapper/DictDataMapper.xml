<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qczy.mapper.DictDataMapper">

    <resultMap type="com.qczy.model.entity.DictDataEntity" id="QczyDictDataResult">
        <result property="id"    column="id"    />
        <result property="typeId"    column="type_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="dictSort"    column="dict_sort"    />
        <result property="dictLabel"    column="dict_label"    />
        <result property="dictValue"    column="dict_value"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectDictDataVo">
        select id, type_id, parent_id,dict_sort, dict_label, dict_value, status, create_time, update_time, remark from qczy_dict_data
    </sql>

    <select id="selectDictDataList" parameterType="com.qczy.model.entity.DictDataEntity" resultMap="QczyDictDataResult">
        SELECT
        da.*
        FROM
        qczy_dict_data AS da
        LEFT JOIN qczy_dict_type AS ty ON ty.id = da.type_id
        <where>
            <if test="req.typeId != null "> and da.type_id = #{req.typeId}</if>
            <if test="req.dictSort != null "> and da.dict_sort = #{req.dictSort}</if>
            <if test="req.dictLabel != null  and req.dictLabel != ''">
             and da.dict_label like '%${req.dictLabel}%'
            </if>
            <if test="req.dictValue != null  and req.dictValue != ''"> and da.dict_value = #{req.dictValue}</if>
            <if test="req.status != null "> and da.status = #{req.status}</if>
            and da.type_id = #{typeId}
        </where>
        ORDER BY
        da.dict_sort
    </select>



    <select id="selectDictDataById" parameterType="Integer" resultMap="QczyDictDataResult">
        <include refid="selectDictDataVo"/>
        where id = #{id}
    </select>


    <select id="selectDataSetDictList" resultType="com.qczy.model.response.DictSetTypeResponse">
        SELECT
            da.id AS id,
            da.dict_label AS dictLabel,
            da.parent_id as parentId,
            ( SELECT count( 1 ) FROM qczy_data_father AS fa WHERE fa.data_type_id = da.id ) AS number,
            da.remark AS remark,
            da.create_time
        FROM
            qczy_dict_data AS da
        WHERE
            da.type_id = 6
        ORDER BY
            number DESC,
            da.create_time ASC
    </select>


    <select id="selectDictDataTreeSon" resultType="com.qczy.model.entity.DictDataEntity">
        SELECT
            au.id
        FROM
                ( SELECT * FROM qczy_dict_data WHERE parent_id IS NOT NULL ) au,
                ( SELECT @parent_id := #{dataTypeId} ) pd
        WHERE
            FIND_IN_SET( parent_id, @parent_id ) > 0
                AND @parent_id := concat( @parent_id, ',', id ) UNION
        SELECT
            id
        FROM
            qczy_dict_data
        WHERE
            id = #{dataTypeId}
        ORDER BY
            id
    </select>


    <insert id="insertDictData" parameterType="com.qczy.model.entity.DictDataEntity" useGeneratedKeys="true" keyProperty="id">
        insert into qczy_dict_data
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="typeId != null">type_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="dictSort != null">dict_sort,</if>
            <if test="dictLabel != null">dict_label,</if>
            <if test="dictValue != null">dict_value,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="typeId != null">#{typeId},</if>
            <if test="parentId != null">#{parentId},</if>
            <if test="dictSort != null">#{dictSort},</if>
            <if test="dictLabel != null">#{dictLabel},</if>
            <if test="dictValue != null">#{dictValue},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateDictData" parameterType="com.qczy.model.entity.DictDataEntity">
        update qczy_dict_data
        <trim prefix="SET" suffixOverrides=",">
            <if test="typeId != null">type_id = #{typeId},</if>
            <if test="parentId != null">parent_id = #{parentId},</if>
            <if test="dictSort != null">dict_sort = #{dictSort},</if>
            <if test="dictLabel != null">dict_label = #{dictLabel},</if>
            <if test="dictValue != null">dict_value = #{dictValue},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDictDataById" parameterType="Integer">
        delete from qczy_dict_data where id = #{id}
    </delete>

    <delete id="deleteDictDataByIds" parameterType="int">
        delete from qczy_dict_data where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>