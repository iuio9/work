<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qczy.mapper.DictTypeMapper">

    <resultMap type="com.qczy.model.entity.DictTypeEntity" id="QczyDictTypeResult">
        <result property="id"    column="id"    />
        <result property="dictName"    column="dict_name"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="isAllowDeletion"    column="is_allow_deletion"    />
    </resultMap>

    <sql id="selectDictTypeVo">
        select id, dict_name, status, create_time, update_time, remark, is_allow_deletion from qczy_dict_type
    </sql>

    <select id="selectDictTypeList" parameterType="com.qczy.model.entity.DictTypeEntity" resultMap="QczyDictTypeResult">
        <include refid="selectDictTypeVo"/>
        <where>
            <if test="req.dictName != null  and req.dictName != ''"> and dict_name like concat('%', #{req.dictName}, '%')</if>
            <if test="req.status != null  and req.status != 0"> and status = #{req.status}</if>
        </where>
    </select>

    <select id="selectDictTypeById" parameterType="Integer" resultMap="QczyDictTypeResult">
        <include refid="selectDictTypeVo"/>
        where id = #{id}
    </select>

    <insert id="insertDictType" parameterType="com.qczy.model.entity.DictTypeEntity" useGeneratedKeys="true" keyProperty="id">
        insert into qczy_dict_type
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dictName != null">dict_name,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dictName != null">#{dictName},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <update id="updateDictType" parameterType="com.qczy.model.entity.DictTypeEntity">
        update qczy_dict_type
        <trim prefix="SET" suffixOverrides=",">
            <if test="dictName != null">dict_name = #{dictName},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDictTypeById" parameterType="Integer">
        delete from qczy_dict_type where id = #{id}
    </delete>

    <delete id="deleteDictTypeByIds" parameterType="int">
        delete from qczy_dict_type where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>