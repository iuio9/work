{
  "task_name": "Qwen2.5-VL蒸馏到ResNet50",
  "description": "使用Qwen2.5-VL 8B作为教师模型，训练ResNet50学生模型进行图像分类",

  "teacher_model": {
    "type": "qwen2.5-vl",
    "model_path": "/data/models/qwen2.5-vl-8b",
    "freeze_weights": true
  },

  "student_model": {
    "type": "resnet",
    "size": "resnet50",
    "pretrained": true,
    "num_classes": 10
  },

  "training": {
    "task_type": "classification",
    "epochs": 100,
    "batch_size": 32,
    "image_size": 224,
    "learning_rate": 0.0001,
    "optimizer": "adamw",
    "lr_scheduler": "cosine",
    "weight_decay": 0.01,
    "grad_accum_steps": 1,
    "max_grad_norm": 1.0,
    "use_amp": true
  },

  "distillation": {
    "type": "hybrid",
    "temperature": 4.0,
    "alpha": 0.5,
    "beta": 0.3,
    "gamma": 0.2,
    "feature_loss_type": "cosine",
    "align_feature": true,
    "feature_dim": 2048
  },

  "dataset": {
    "train_path": "/data/datasets/cifar10/train",
    "val_path": "/data/datasets/cifar10/val",
    "num_classes": 10
  },

  "gpu": {
    "devices": "0",
    "use_amp": true
  },

  "output": {
    "output_dir": "/data/outputs/qwen_resnet50",
    "checkpoint_interval": 10,
    "log_interval": 50
  }
}
